@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div>
    <h3>Распродажа книг</h3>
    <table class="table">
        <tr>
            <th>Название книги</th>
            <th>Автор</th>
            <th>Цена</th>
            <th></th>
        </tr>
        @foreach (var b in ViewBag.Books)
        {
            <tr>
                <td><p>@b.Name</p></td>
                <td><p>@b.Author</p></td>
                <td><p>@b.Price</p></td>
                <td><p><a href="/Purchases/Create/@b.Id">Купить</a></p></td>
            </tr>
        }
       
    </table>
</div>
@section Footer {
    Все права защищены. УИ-ВЦ. 2019.
}